{
  "manifest_version": 3,
  "name": "OnlineJobs.ph Job Details Extractor",
  "version": "1.0",
  "description": "Copy content from onlinejobs.ph for application spreadsheets.",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.onlinejobs.ph/jobseekers/job/*"],
      "js": ["content.js"]
    }
  ]
}
